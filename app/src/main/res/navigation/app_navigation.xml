<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/postFragment">

    <fragment
        android:id="@+id/postFragment"
        android:name="com.wema.postapp.ui.fragment.PostFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" >
        <action
            android:id="@+id/action_postFragment_to_showPostFragment"
            app:destination="@id/showPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.wema.postapp.ui.fragment.CreatePostFragment"
        android:label="fragment_create_post"
        tools:layout="@layout/fragment_create_post" />
    <fragment
        android:id="@+id/showPostFragment"
        android:name="com.wema.postapp.ui.fragment.ShowPostFragment"
        android:label="fragment_show_post"
        tools:layout="@layout/fragment_show_post" >
        <argument
            android:name="postId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/todoFragment"
        android:name="com.wema.postapp.ui.fragment.TodoFragment"
        android:label="fragment_todo"
        tools:layout="@layout/fragment_todo" />
</navigation>